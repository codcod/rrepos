# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.rs]
indent_size = 4
indent_style = tab

[{*.yaml,*.yml}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
max_line_length = off
trim_trailing_whitespace = false